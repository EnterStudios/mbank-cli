use strict;
use warnings;
no encoding;

use Encode qw();
use Encode::Locale qw();
use English qw(-no_match_vars);
use File::Basename qw(dirname);
use Getopt::Long qw(:config gnu_compat permute no_getopt_compat no_ignore_case);
use HTML::HeadParser ();
